<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_card_view_bottom"
        android:orientation="vertical"
        android:padding="@dimen/dp_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_view_dialog_yes_or_no_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/ic_baralho_dialog" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_view_dialog_yes_or_no_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/any_text"
                android:textColor="@color/button_app"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_view_dialog_yes_or_no_descricao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:textSize="@dimen/sp_24"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/any_text"
                android:textColor="@color/button_app" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/item_view_dialog_resumo_pontos_btn_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="5"
                android:background="@drawable/button_succes_background"
                android:text="NÃ£o"
                android:textColor="@color/button_app_txt"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/item_view_dialog_resumo_pontos_btn_yes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="5"
                android:background="@drawable/button_succes_background"
                android:text="Sim"
                android:textColor="@color/button_app_txt"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>